{
  "manifest_version": 2,
  "name": "Gandi IDE Tools",
  "version": "1.0",
  "description": "A collection of tools for Gandi IDE",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "https://raw.githubusercontent.com/",
    "storage",
    "webNavigation"
  ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
  "content_security_policy": "script-src 'self'; object-src 'self';",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon.png"
  }
}
